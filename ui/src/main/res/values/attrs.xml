<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ItemView">
        <attr name="leftText" format="string" />
        <attr name="leftTextSize" format="dimension" />
        <attr name="leftTextColor" format="color" />
        <attr name="rightText" format="string" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightImage" format="reference" />
        <attr name="rightImageSize" format="dimension" />
        <attr name="showRightText" format="boolean" />
        <attr name="showRightImage" format="boolean" />
        <attr name="showTopLine" format="boolean" />
        <attr name="showBottomLine" format="boolean" />
        <attr name="linePadding" format="dimension" />
        <attr name="lineStartPadding" format="dimension" />
        <attr name="lineEndPadding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="pickerview">
        <attr name="wheelview_gravity">
            <enum name="center" value="17" />
            <enum name="left" value="3" />
            <enum name="right" value="5" />
        </attr>
        <attr name="wheelview_textSize" format="dimension" />
        <attr name="wheelview_textColorOut" format="color" />
        <attr name="wheelview_textColorCenter" format="color" />
        <attr name="wheelview_dividerColor" format="color" />
        <attr name="wheelview_dividerWidth" format="dimension" />
        <attr name="wheelview_lineSpacingMultiplier" format="float" />
    </declare-styleable>

    <declare-styleable name="TextView">
        <attr name="borderColor" format="color" />
        <attr name="borderSize" format="dimension" />
        <attr name="radius" format="dimension" />
        <attr name="topLeftRadius" format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="bottomRightRadius" format="dimension" />
        <attr name="backgroundColor" format="color" />
        <attr name="backgroundShape" format="integer" >
            <enum name="rect" value="0" />
            <enum name="oval" value="1" />
        </attr>
    </declare-styleable>

</resources>